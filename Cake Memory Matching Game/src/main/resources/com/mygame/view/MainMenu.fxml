<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainLayout"
            prefHeight="400.0"
            prefWidth="600.0"
            styleClass="background-pane"
            stylesheets="@/style.css"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mygame.controller.MainController">

   <children>
      <Button fx:id="rulesButton"
              layoutX="176.0" layoutY="316.0"
              mnemonicParsing="false"
              onAction="#handleRulesButton"
              prefHeight="32.0" prefWidth="116.0"
              style="-fx-background-color: #c3b5ed;"
              text="RULES">
         <font>
            <Font name="Tahoma Bold" size="16.0" />
         </font>
      </Button>

      <Button fx:id="playgameButton"
              layoutX="314.0" layoutY="316.0"
              mnemonicParsing="false"
              onAction="#handlePlayGameButton"
              style="-fx-background-color: #c3b5ed;"
              text="PLAY GAME"
              prefHeight="32.0" prefWidth="150.0">
         <font>
            <Font name="Tahoma Bold" size="16.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
